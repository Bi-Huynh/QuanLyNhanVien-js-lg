extends ../layouts/common.pug

block content
    h1 Products List
    .container
        if (_listProducts)
            .row
                each product in _listProducts
                    .col.mb-3
                        .media
                            img.rounded.mx-auto(src= product.image, alt="picture product")
                            .media-body.ml-3
                                h2.mt-0= product.name
                                p= product.description
                                p= product.price
                                a.btn.btn-primary.btn-lg(href="#" data-toggle="button" aria-pressed="false" autocomplete="off") SEEN
                                a.btn.btn-primary.btn-lg.ml-3(href="#" data-toggle="button" aria-pressed="false" autocomplete="off") BUY

