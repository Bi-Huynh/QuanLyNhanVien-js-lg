extends ../layouts/common.pug

block content
    h1 Products List
    .container
        if (_listProducts)
            .row
                each product in _listProducts
                    .col.mb-3
                        .media
                            img.rounded.mx-auto(src= product.image, alt="picture product")
                            .media-body.ml-3
                                h2.mt-0= product.name
                                p= product.description
                                p= product.price
                                a.btn.btn-primary.btn-lg(href="#" data-toggle="button" aria-pressed="false" autocomplete="off") SEEN
                                a.btn.btn-primary.btn-lg.ml-3(href=`/cart/add/${product.id}`  data-toggle="button" aria-pressed="false" autocomplete="off") BUY
            nav(aria-label='Page navigation product')
                ul.pagination
                    li.page-item
                        a.page-link(href= _page ? `${_page - 1}` : `1` aria-label='Previous')
                            span(aria-hidden='true') &laquo;
                            span.sr-only Previous
                    if (_length)
                        -for (var i = 0; i < _length; i++)
                            li.page-item
                            a.page-link(href=`${i + 1}`) #{i + 1}
                    li.page-item
                        a.page-link(href= _page ? `${_page + 1}` : `${_listProducts.length - 1}` aria-label='Next')
                            span(aria-hidden='true') &raquo;
                            span.sr-only Next